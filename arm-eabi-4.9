#!/bin/bash

#Make a clean build
if [ -e Makefile ];
then
    make -j10 distclean
fi;

#Make a clean install always
if [ -d /tmp/arm-eabi ]
then
    rm -rf /tmp/arm-eabi
fi;

#Build Configuration
./configure --prefix=/tmp/arm-eabi --target=arm-eabi --host=x86_64-linux-gnu --build=x86_64-linux-gnu --program-transform-name='s&^&arm-eabi-&' --with-gcc-version=SaberMod --with-binutils-version=gnu --with-gmp-version=5.1.3 --with-mpfr-version=3.1.2 --with-mpc-version=1.0.2 --with-gdb-version=gnu --with-sysroot=/ --enable-threads=single

#Build the toolchain
make -j10;

#Install the toolchain
make install;

